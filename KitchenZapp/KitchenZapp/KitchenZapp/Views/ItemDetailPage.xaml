<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="KitchenZapp.Views.ItemDetailPage"
             Title="{Binding Title}"
             BackgroundColor="#f4f6fc">






    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="BalanceItemStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="10" />
            </Style>
            <Style x:Key="BalanceFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="#278cff" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0" />
            </Style>
            <Style x:Key="BalanceStyle" TargetType="Label">
                <Setter Property="Padding" Value="15" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="Medium" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>








    <StackLayout Spacing="20" Padding="20">
        <StackLayout>
            <Label Text="Door number:" FontSize="Large" />
            <Label Text="{Binding Item.DoorNumber}" d:Text="User door number" FontSize="Small"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Birthday:" FontSize="Large" />
            <Label Text="{Binding Item.Birthday, StringFormat='{0:dd/MM/yyyy}'}" d:Text="User birthday" FontSize="Small"/>
        </StackLayout>
        <StackLayout>
            <Label Text="Phone:" FontSize="Large" />
            <Label Text="{Binding Item.Phone}" d:Text="User phone" FontSize="Small"/>
        </StackLayout>
        <CollectionView x:Name="ItemsCollectionView"
                        ItemsSource="{Binding Item.BalanceItems}">
            <d:CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>First Balance item</x:String>
                    <x:String>Second Balance item</x:String>
                </x:Array>
            </d:CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{DynamicResource BalanceItemStyle}">
                        <StackLayout Orientation="Horizontal"
                                 Spacing="0">
                            <Label Text="{Binding Description}"
                               d:Text="{Binding .}"
                               LineBreakMode="NoWrap"
                               Style="{DynamicResource ListItemTextStyle}" 
                               FontSize="Small"
                               VerticalTextAlignment="Center"
                               HorizontalOptions="FillAndExpand"/>
                            <StackLayout Spacing="0">
                                <Label Text="{Binding Amount, StringFormat='x{0}'}"
                                   d:Text="x 1"
                                   LineBreakMode="NoWrap"
                                   Style="{DynamicResource ListItemTextStyle}" 
                                   FontSize="Small"
                                   HorizontalTextAlignment="End" />
                                <Label Text="{Binding Total, StringFormat='{0:N2} kr'}"
                                   d:Text="2.00 kr"
                                   LineBreakMode="NoWrap"
                                   Style="{DynamicResource ListItemDetailTextStyle}"
                                   FontSize="Small"
                                   TextColor="Green"
                                   HorizontalOptions="FillAndExpand"
                                   HorizontalTextAlignment="End">
                                    <Label.Triggers>
                                        <DataTrigger TargetType="Label"
                                                 Binding="{Binding IsTotalNegative}"
                                                 Value="true">
                                            <Setter Property="TextColor"
                                                Value="Red" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Label"
                                                 Binding="{Binding Balance}"
                                                 Value="0">
                                            <Setter Property="TextColor"
                                                Value="Gray" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Frame Style="{DynamicResource BalanceFrameStyle}">
            <Label Text="{Binding Item.Balance, StringFormat='Balance: {0:N2} kr'}"
                   d:Text="Balance: 0.00 kr"
                   Style="{DynamicResource BalanceStyle}" />
        </Frame>
    </StackLayout>

</ContentPage>